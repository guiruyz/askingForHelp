        <hr>
        <h1> Perguntas </h1>
        <hr>
        <a href="/perguntar" class="btn btn-success">Perguntar</a>
        <hr>
        <% questions.forEach(questions => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= questions.title %></h3>
